https://practice.geeksforgeeks.org/problems/count-leaves-in-binary-tree/1

int countLeaves(Node* root)
{
  // Your code here
  if(!root)return 0;
  int c=0;
  queue<Node*>q;
  q.push(root);
  while(q.size()){
      int s=q.size();
      for(int i=0;i<s;i++){
          Node* node=q.front();
          q.pop();
          if(node->left)q.push(node->left);
          if(node->right)q.push(node->right);
          if(!node->left&&!node->right)c++;
      }
  }
  return c;
}

SC : O(N)
TC : O(N)
