https://leetcode.com/problems/diameter-of-binary-tree/

class Solution {
public:
    int helper(TreeNode* root, int& d){
        if(!root)return 0;
        int l=helper(root->left,d);
        int r=helper(root->right,d);
        d=max(d,l+r);
        return 1+max(l,r);
        
    }
    int diameterOfBinaryTree(TreeNode* root) {
        int d=0;
        helper(root,d);
        return d;
    }
};


SC : O(1)
TC : O(N)
